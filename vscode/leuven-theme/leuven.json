{
    "name": "Leuven",
    "type": "light",
    "colors": {
        "editor.background": "#FFFFFF",
        "editor.foreground": "#333333",
        "editor.lineHighlightBackground": "#8ED3FF",
        "editorCursor.foreground": "#21BDFF",
        "editorLineNumber.foreground": "#9A9A9A",
        "editorLineNumber.activeForeground": "#333333",
        "titleBar.activeBackground": "#f0f0f0",
        "titleBar.activeForeground": "#333333",
        "activityBar.background": "#f0f0f0",
        "activityBar.foreground": "#0000FF",
        "sideBar.background": "#f0f0f0",
        "sideBar.foreground": "#333333",
        "statusBar.background": "#f0f0f0",
        "statusBar.foreground": "#333333",
        "editor.selectionBackground": "#8ED3FF",
        "editor.selectionHighlightBackground": "#dddddd",
        "editor.wordHighlightBackground": "#dddddd"
    },
    "tokenColors": [
        {
            "name": "Comments",
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "foreground": "#A0A1A7",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Constants",
            "scope": [
                "constant",
                "constant.numeric",
                "constant.language"
            ],
            "settings": {
                "foreground": "#D0372D"
            }
        },
        {
            "name": "Strings",
            "scope": [
                "string"
            ],
            "settings": {
                "foreground": "#008000"
            }
        },
        {
            "name": "Keywords",
            "scope": [
                "keyword",
                "storage.type",
                "storage.modifier"
            ],
            "settings": {
                "foreground": "#0000FF",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Functions",
            "scope": [
                "entity.name.function",
                "meta.function-call"
            ],
            "settings": {
                "foreground": "#006699",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Classes",
            "scope": [
                "entity.name.type",
                "entity.name.class",
                "entity.name.namespace"
            ],
            "settings": {
                "foreground": "#6434A3",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Variables",
            "scope": [
                "variable",
                "variable.other"
            ],
            "settings": {
                "foreground": "#BA36A5"
            }
        },
        {
            "name": "Error",
            "scope": [
                "invalid",
                "invalid.illegal"
            ],
            "settings": {
                "foreground": "#A535AE"
            }
        }
    ]
}